{
  "extends": "../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "noEmit": false,
    "composite": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@api": ["./src/api"],
      "@helpers": ["./src/helpers"],
      "@types": ["./src/types"]
    }
  },
  "compileOnSave": true
}
